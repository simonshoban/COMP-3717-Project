<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_washroom"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:text="@string/btn_washroom"/>

        <Button
            android:id="@+id/btn_water_fountain"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:text="@string/btn_water_fountain"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_addiction_clinic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:text="@string/btn_addiction_clinic"/>

        <Button
            android:id="@+id/btn_hospital"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:text="@string/btn_hospital"/>

    </LinearLayout>

</LinearLayout>